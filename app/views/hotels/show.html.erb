<% title "Hotel" %>

<p>
  <strong>Name:</strong>
  <%= @hotel.name %>
</p>
<p>
  <strong>Star:</strong>
  <%= @hotel.star %>
</p>
<p>
  <strong>Address:</strong>
  <%= @hotel.address %>
</p>
<p>
  <strong>Email:</strong>
  <%= @hotel.email %>
</p>
<p>
  <strong>Phone:</strong>
  <%= @hotel.phone %>
</p>
<p>
  <strong>Fax:</strong>
  <%= @hotel.fax %>
</p>

<% if !@hotel.gallery %>
  
  <%= render :partial => '/galleries/form.html.erb' %>

<% else%>
  
  <% @hotel.gallery.gallery_items.each do |gallery_item| %>
  
    <%= image_tag gallery_item.photo.url(:small) %>
    
  <% end %>
  
  <h3>Add Photo:</h3>
  <%= render :partial => '/gallery_items/form.html.erb' %>

<% end %>

<p>
  <%= link_to "Edit", edit_hotel_path(@hotel) %> |
  <%= link_to "Destroy", @hotel, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", hotels_path %>
</p>
