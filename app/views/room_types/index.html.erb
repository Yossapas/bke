<% title "Room Types" %>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Cable Tv</th>
    <th>Bed Type</th>
    <th>Cost</th>
    <th>Kitchen</th>
    <th>Bathtub</th>
    <th>Hotel</th>
  </tr>
  <% for room_type in @room_types %>
    <tr>
      <td><%= room_type.title %></td>
      <td><%= room_type.description %></td>
      <td><%= room_type.cable_tv %></td>
      <td><%= room_type.bed_type %></td>
      <td><%= room_type.cost %></td>
      <td><%= room_type.kitchen %></td>
      <td><%= room_type.bathtub %></td>
      <td><%= room_type.hotel_id %></td>
      <td><%= link_to "Show", room_type %></td>
      <td><%= link_to "Edit", edit_room_type_path(room_type) %></td>
      <td><%= link_to "Destroy", room_type, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Room Type", new_room_type_path %></p>
